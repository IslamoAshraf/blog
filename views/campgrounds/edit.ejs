<%- include ("../partials/header"); %>
<div class="container">
    <div style="width: 30%; margin: 0 auto;">
        <h1 style="text-align: center;">Edit <%= campground.name %> </h1>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT " method="POST">
            <div class="form-group">
                <input type="text" value="<%= campground.name %>" placeholder="name" name="campground[name]"
                    class="form-control">
            </div>
            <div class="form-group">
                <input type="text" value="<%= campground.description %>" placeholder="description"
                    name="campground[description]" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" value="<%= campground.image %>" placeholder="image url" name="campground[image]"
                    class="form-control">
            </div>
            <div class="form-group">
                <input type="number" value="<%= campground.price %> " placeholder="price" name="campground[price]" id=""
                    class="form-control" min="5">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary btn-block">submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include ("../partials/footer"); %>