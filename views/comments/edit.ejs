<%- include ("../partials/header"); %>
<div class="container">
    <div style="width: 30%; margin: 0 auto;">
        <h1 style="text-align: center;">Edit comment to <%= campground.name %> </h1>
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
            <div class="form-group">
                <input type="text" placeholder="text" name="comment[text]" value="<%= comment.text %> " class="form-control">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary btn-block">submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include ("../partials/footer"); %>